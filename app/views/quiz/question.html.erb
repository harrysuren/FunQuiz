
<%= javascript_tag do %>
  jQuery("countdown_timer_widget").countdowntimer("<%= Time.now.utc %>", "<%= Time.now+5.minutes %>")      
<% end %>

<h1>Question <%= @current + 1 %> of <%= @total %></h1>
<p id="question"><%= @question.text %></p>

 
 <%= Time.now.to_s %>
 
  <div class="countdown_timer_widget">
    </div>
   
    <script type="text/javascript">
      $(document).ready(function(){ 
        jQuery(".countdown_timer_widget").countdowntimer("<%= j (Time.now.to_s) %>", "<%= j (@end_time.to_s) %>");
        
      });
    </script>
   
 
 
<%= form_tag({:controller => "quiz",  :action => "question"}) do %>
  <% @choices.each do |choice| %>
	 <p class="choice">
		<%= radio_button_tag(:choice, choice.id) %>
		<%= label_tag("choice_".concat(choice.id.to_s).to_sym, choice.text) %>
	 </p>
  <% end %>
  
  <div class="center">
	 <%= submit_tag("Continue", :class => "submit") %>
  </div>
   

 
<% end %>

<% content_for(:title) do %>
  Question <%= @current + 1 %> of <%= @total %>
<% end %>